#version 450 core

layout (vertices = 4) out; 

uniform float LOD;

void main() 
{
	if (gl_InvocationID == 0) 
	{
		gl_TessLevelInner[0] = 3.0 * LOD * 0.05; 
		gl_TessLevelInner[1] = 3.0 * LOD * 0.05;

		gl_TessLevelOuter[0] = 5.0 * LOD * 0.05; 
		gl_TessLevelOuter[1] = 5.0 * LOD * 0.05; 
		gl_TessLevelOuter[2] = 5.0 * LOD * 0.05; 
		gl_TessLevelOuter[3] = 5.0 * LOD * 0.05;
	} 

	gl_out[gl_InvocationID].gl_Position = gl_in[gl_InvocationID].gl_Position;
}